<div class="look-header-section" style="
  background-color: {{ section.settings.background_color }};
  color: {{ section.settings.text_color }};
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
">
  <div class="page-width">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'title' %}
          {% assign has_title = false %}
          {% if block.settings.title_ja != blank or block.settings.title_en != blank %}
            {% assign has_title = true %}
          {% endif %}
          {% if has_title %}
            <div class="look-header-block" {{ block.shopify_attributes }}>
              {% assign title_tag = block.settings.heading_tag | default: 'h1' %}
              <{{ title_tag }} class="look-header-title text-{{ block.settings.alignment }}" style="
                margin-top: {{ block.settings.margin_top }}px;
                margin-bottom: {{ block.settings.margin_bottom }}px;
              ">
                {% if request.locale.iso_code == 'ja' %}
                  {{ block.settings.title_ja | default: block.settings.title_en }}
                {% else %}
                  {{ block.settings.title_en | default: block.settings.title_ja }}
                {% endif %}
              </{{ title_tag }}>
            </div>
          {% endif %}
        
        {% when 'subtitle' %}
          {% assign has_subtitle = false %}
          {% if block.settings.subtitle_ja != blank or block.settings.subtitle_en != blank %}
            {% assign has_subtitle = true %}
          {% endif %}
          {% if has_subtitle %}
            <div class="look-header-block" {{ block.shopify_attributes }}>
              {% assign subtitle_tag = block.settings.heading_tag | default: 'p' %}
              <{{ subtitle_tag }} class="look-header-subtitle text-{{ block.settings.alignment }}" style="
                margin-top: {{ block.settings.margin_top }}px;
                margin-bottom: {{ block.settings.margin_bottom }}px;
              ">
                {% if request.locale.iso_code == 'ja' %}
                  {{ block.settings.subtitle_ja | default: block.settings.subtitle_en }}
                {% else %}
                  {{ block.settings.subtitle_en | default: block.settings.subtitle_ja }}
                {% endif %}
              </{{ subtitle_tag }}>
            </div>
          {% endif %}
        
        {% when 'text' %}
          {% assign has_text = false %}
          {% if block.settings.text_ja != blank or block.settings.text_en != blank %}
            {% assign has_text = true %}
          {% endif %}
          {% if has_text %}
            <div class="look-header-block text-{{ block.settings.alignment }}" {{ block.shopify_attributes }} style="
              margin-top: {{ block.settings.margin_top }}px;
              margin-bottom: {{ block.settings.margin_bottom }}px;
            ">
              <div class="look-header-text">
                {% if request.locale.iso_code == 'ja' %}
                  {{ block.settings.text_ja | default: block.settings.text_en | newline_to_br }}
                {% else %}
                  {{ block.settings.text_en | default: block.settings.text_ja | newline_to_br }}
                {% endif %}
              </div>
            </div>
          {% endif %}
      {% endcase %}
    {% endfor %}
  </div>
</div>

<style>
  .look-header-section {
    width: 100%;
  }
  
  .page-width {
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding-left: var(--page-padding, 2rem);
    padding-right: var(--page-padding, 2rem);
  }
  
  @media screen and (max-width: 768px) {
    .page-width {
      padding-left: var(--page-padding-mobile, 1.5rem);
      padding-right: var(--page-padding-mobile, 1.5rem);
    }
  }
  
  @media screen and (max-width: 480px) {
    .page-width {
      padding-left: var(--page-padding-mobile, 1rem);
      padding-right: var(--page-padding-mobile, 1rem);
    }
  }
  
  /* Block Styles */
  .look-header-block {
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
  }
  
  /* Title Styles */
  .look-header-title {
    line-height: 1.3;
    letter-spacing: 0.1em;
  }
  
  /* Subtitle Styles */
  .look-header-subtitle {
    letter-spacing: 0.2em;
    opacity: 0.8;
    line-height: 1.5;
  }
  
  /* Text Styles */
  .look-header-text {
    line-height: 1.6;
  }
  
  /* Alignment Classes */
  .text-left {
    text-align: left;
  }
  
  .text-center {
    text-align: center;
  }
  
  .text-right {
    text-align: right;
  }
</style>

