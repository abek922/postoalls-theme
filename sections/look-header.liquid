<div class="look-header-section" style="
  background-color: {{ section.settings.background_color }};
  color: {{ section.settings.text_color }};
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
">
  <div class="page-width">
    <!-- Title Section -->
    {% if section.settings.show_title and (section.settings.title_ja != blank or section.settings.title_en != blank) %}
      <div class="look-header-title-content">
        {% assign title_tag = section.settings.heading_tag | default: 'h1' %}
        <{{ title_tag }} class="look-header-main-title">
          {% if request.locale.iso_code == 'ja' %}
            {{ section.settings.title_ja | default: section.settings.title_en }}
          {% else %}
            {{ section.settings.title_en | default: section.settings.title_ja }}
          {% endif %}
        </{{ title_tag }}>
        
        {% if section.settings.subtitle_ja != blank or section.settings.subtitle_en != blank %}
          <p class="look-header-subtitle">
            {% if request.locale.iso_code == 'ja' %}
              {{ section.settings.subtitle_ja | default: section.settings.subtitle_en }}
            {% else %}
              {{ section.settings.subtitle_en | default: section.settings.subtitle_ja }}
            {% endif %}
          </p>
        {% endif %}
      </div>
    {% endif %}
    
    <!-- Text Section -->
    {% if section.settings.show_text and (section.settings.text_ja != blank or section.settings.text_en != blank) %}
      <div class="look-header-text-content text-{{ section.settings.text_alignment }}">
        <div class="look-header-text-body">
          {% if request.locale.iso_code == 'ja' %}
            {{ section.settings.text_ja | default: section.settings.text_en | newline_to_br }}
          {% else %}
            {{ section.settings.text_en | default: section.settings.text_ja | newline_to_br }}
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .look-header-section {
    width: 100%;
  }
  
  .page-width {
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding-left: var(--page-padding, 2rem);
    padding-right: var(--page-padding, 2rem);
  }
  
  @media screen and (max-width: 768px) {
    .page-width {
      padding-left: var(--page-padding-mobile, 1.5rem);
      padding-right: var(--page-padding-mobile, 1.5rem);
    }
  }
  
  @media screen and (max-width: 480px) {
    .page-width {
      padding-left: var(--page-padding-mobile, 1rem);
      padding-right: var(--page-padding-mobile, 1rem);
    }
  }
  
  /* Title Styles */
  .look-header-title-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .look-header-main-title {
    margin: 0 0 16px 0;
    line-height: 1.3;
    letter-spacing: 0.1em;
  }
  
  .look-header-subtitle {
    font-size: 1.2rem;
    font-weight: 400;
    letter-spacing: 0.2em;
    margin: 0;
    opacity: 0.8;
  }
  
  /* Text Styles */
  .look-header-text-content {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .look-header-title-content + .look-header-text-content {
    margin-top: 40px;
  }
  
  .look-header-text-body {
    line-height: 1.6;
    margin: 0;
  }
  
  .text-left {
    text-align: left;
  }
  
  .text-center {
    text-align: center;
  }
  
  .text-right {
    text-align: right;
  }
  
  @media screen and (max-width: 768px) {
    .look-header-subtitle {
      font-size: 1rem;
      letter-spacing: 0.15em;
    }
    
    .look-header-title-content + .look-header-text-content {
      margin-top: 30px;
    }
  }
  
  @media screen and (max-width: 480px) {
    .look-header-subtitle {
      font-size: 0.9rem;
    }
    
    .look-header-title-content + .look-header-text-content {
      margin-top: 24px;
    }
  }
</style>

{% schema %}
{
  "name": "Look Header",
  "settings": [
    {
      "type": "header",
      "content": "Title Section"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Title Section",
      "default": true
    },
    {
      "type": "text",
      "id": "title_ja",
      "label": "Title (Japanese)",
      "default": "2025年 春夏コレクション"
    },
    {
      "type": "text",
      "id": "title_en",
      "label": "Title (English)",
      "default": "2025 SPRING & SUMMER COLLECTION"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Heading Style",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        }
      ],
      "default": "h1"
    },
    {
      "type": "text", 
      "id": "subtitle_ja",
      "label": "Subtitle (Japanese)",
      "default": "日本語　サブタイトル"
    },
    {
      "type": "text", 
      "id": "subtitle_en",
      "label": "Subtitle (English)",
      "default": "English Subtitle"
    },
    {
      "type": "header",
      "content": "Text Section"
    },
    {
      "type": "checkbox",
      "id": "show_text",
      "label": "Show Text Section",
      "default": true
    },
    {
      "type": "textarea",
      "id": "text_ja",
      "label": "Text (Japanese)",
      "default": "日本語のテキストをここに入力します。"
    },
    {
      "type": "textarea",
      "id": "text_en",
      "label": "Text (English)",
      "default": "English text goes here."
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center", 
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Design Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F5F5F5"
    },
    {
      "type": "color",
      "id": "text_color", 
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Look Header",
      "category": "POST O'ALLS Look"
    }
  ]
}
{% endschema %}