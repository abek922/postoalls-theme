{%- comment -%}
------------------------------------------------------------------------------------------------------------------------
LIQUID - NEWS POSTS SECTION
------------------------------------------------------------------------------------------------------------------------
{%- endcomment -%}

{%- assign color_scheme_hash = section.settings.color_scheme.settings.background_gradient | default: section.settings.color_scheme.settings.background | md5 -%}

<style>
  #shopify-section-{{ section.id }} .news-posts-wrapper {
    padding: 60px 0;
  }

  #shopify-section-{{ section.id }} .news-posts-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  #shopify-section-{{ section.id }} .news-posts-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
  }

  /* PC Layout - Left title, Right posts */
  @media screen and (min-width: 1024px) {
    #shopify-section-{{ section.id }} .news-posts-layout {
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      align-items: start;
    }

    #shopify-section-{{ section.id }} .news-posts-header {
      
      top: 100px;
    }
  }

  #shopify-section-{{ section.id }} .news-posts-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  #shopify-section-{{ section.id }} .news-post-item {
    border-bottom: 1px solid rgba(var(--text-color), 0.1);
    padding: 24px 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  #shopify-section-{{ section.id }} .news-post-item:first-child {
    padding-top: 0;
  }

  #shopify-section-{{ section.id }} .news-post-item:last-child {
    border-bottom: none;
  }

  #shopify-section-{{ section.id }} .news-post-item:hover {
    padding-left: 12px;
  }

  #shopify-section-{{ section.id }} .news-post-content {
    flex: 1;
  }

  #shopify-section-{{ section.id }} .news-post-category {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: rgba(var(--text-color), 0.6);
    margin-bottom: 4px;
  }

  #shopify-section-{{ section.id }} .news-post-date {
    font-size: 14px;
    color: rgba(var(--text-color), 0.6);
    margin-bottom: 8px;
  }

  #shopify-section-{{ section.id }} .news-post-title {
    font-size: 16px;
    line-height: 1.5;
    margin: 0;
    font-weight: 500;
  }

  #shopify-section-{{ section.id }} .news-post-excerpt {
    font-size: 14px;
    line-height: 1.6;
    color: rgba(var(--text-color), 0.7);
    margin-top: 8px;
  }

  #shopify-section-{{ section.id }} .news-post-arrow {
    width: 20px;
    height: 20px;
    margin-left: 20px;
    flex-shrink: 0;
    opacity: 0.5;
    transition: all 0.2s ease;
  }

  #shopify-section-{{ section.id }} .news-post-item:hover .news-post-arrow {
    opacity: 1;
    transform: translateX(4px);
  }

  #shopify-section-{{ section.id }} .news-post-arrow svg {
    width: 100%;
    height: 100%;
    stroke: currentColor;
    stroke-width: 1.5;
  }

  /* Read more link */
  #shopify-section-{{ section.id }} .news-post-read-more {
    display: inline-block;
    margin-top: 8px;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    font-weight: 600;
    color: inherit;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  /* Button styles matching theme */
  #shopify-section-{{ section.id }} .news-view-all {
    margin-top: 40px;
    text-align: {{ section.settings.button_alignment }};
  }

  #shopify-section-{{ section.id }} .button {
    display: inline-block;
    padding: 12px 32px;
    font-size: var(--button-text-size, 14px);
    font-weight: var(--button-text-weight, 600);
    letter-spacing: 0.06em;
    text-transform: uppercase;
    text-decoration: none;
    border: 1px solid currentColor;
    background: transparent;
    color: inherit;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  #shopify-section-{{ section.id }} .button:hover {
    background: rgb(var(--text-color));
    color: rgb(var(--background));
  }

  /* Empty state */
  #shopify-section-{{ section.id }} .news-empty-state {
    text-align: center;
    padding: 60px 20px;
    color: rgba(var(--text-color), 0.5);
  }

  /* Mobile responsive */
  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .news-posts-wrapper {
      padding: 40px 0;
    }

    #shopify-section-{{ section.id }} .news-posts-container {
      padding: 0 16px;
    }

    #shopify-section-{{ section.id }} .news-posts-header {
      margin-bottom: 30px;
    }

    #shopify-section-{{ section.id }} .news-post-item {
      padding: 20px 0;
    }

    #shopify-section-{{ section.id }} .news-post-date {
      font-size: 13px;
    }

    #shopify-section-{{ section.id }} .news-post-title {
      font-size: 15px;
    }

    #shopify-section-{{ section.id }} .news-post-excerpt {
      font-size: 13px;
    }

    #shopify-section-{{ section.id }} .news-view-all {
      margin-top: 30px;
    }
  }

  /* Tablet responsive */
  @media screen and (min-width: 769px) and (max-width: 1023px) {
    #shopify-section-{{ section.id }} .news-posts-container {
      padding: 0 30px;
    }
  }
</style>

<div class="section-spacing color-scheme color-scheme--{{ section.settings.color_scheme.id }} color-scheme--bg-{{ color_scheme_hash }} {% if section.settings.separate_section_with_border %}bordered-section{% endif %}">
  <div class="news-posts-wrapper">
    <div class="news-posts-container">
      <div class="news-posts-layout">
        {%- comment -%} Header Section {%- endcomment -%}
        <div class="news-posts-header">
          {%- render 'section-header', subheading: section.settings.subheading, heading: section.settings.title, content: section.settings.content, text_alignment: section.settings.text_alignment -%}

          {%- comment -%} Button in header for PC layout {%- endcomment -%}
          {%- if section.settings.button_text != blank -%}
            <div class="news-view-all hidden lg:block">
              {%- assign button_link = section.settings.button_link | default: section.settings.blog.url -%}
              <a href="{{ button_link }}" class="button">
                {{ section.settings.button_text }}
              </a>
            </div>
          {%- endif -%}
        </div>

        {%- comment -%} Posts List {%- endcomment -%}
        <div class="news-posts-main">
          <div class="news-posts-list">
            {%- assign blog = blogs[section.settings.blog] -%}
            {%- if blog != blank -%}
              {%- for article in blog.articles limit: section.settings.posts_count -%}
                <a href="{{ article.url }}" class="news-post-item">
                  <div class="news-post-content">
                    {%- if section.settings.show_category and article.tags.size > 0 -%}
                      <div class="news-post-category">
                        {{ article.tags | first }}
                      </div>
                    {%- endif -%}
                    
                    {%- if section.settings.show_date -%}
                      <div class="news-post-date">
                        {{ article.published_at | date: '%Y.%m.%d' }}
                      </div>
                    {%- endif -%}
                    
                    <h3 class="news-post-title">
                      {{ article.title | strip_html | truncate: 100 }}
                    </h3>
                    
                    {%- if section.settings.show_excerpt -%}
                      <div class="news-post-excerpt">
                        {{ article.excerpt | strip_html | truncate: 150 }}
                      </div>
                    {%- endif -%}
                    
                    {%- if section.settings.show_read_more -%}
                      <span class="news-post-read-more">Read more</span>
                    {%- endif -%}
                  </div>
                  <div class="news-post-arrow">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                    </svg>
                  </div>
                </a>
              {%- endfor -%}
            {%- else -%}
              <div class="news-empty-state">
                <p>No blog selected. Please select a blog in the section settings.</p>
              </div>
            {%- endif -%}
          </div>

          {%- comment -%} Button below posts for mobile {%- endcomment -%}
          {%- if section.settings.button_text != blank -%}
            <div class="news-view-all lg:hidden">
              {%- assign button_link = section.settings.button_link | default: section.settings.blog.url -%}
              <a href="{{ button_link }}" class="button">
                {{ section.settings.button_text }}
              </a>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "News Posts",
  "class": "shopify-section--news-posts",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "custom.overlay"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "separate_section_with_border",
      "label": "Separate section with border",
      "default": true
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "range",
      "id": "posts_count",
      "min": 2,
      "max": 9,
      "label": "Posts count",
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_category",
      "label": "Show category",
      "info": "Uses the first tag as category",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show date",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show excerpt",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_read_more",
      "label": "Show read more",
      "default": true
    },
    {
      "type": "header",
      "content": "t:global.section.header_category"
    },
    {
      "type": "inline_richtext",
      "id": "subheading",
      "label": "t:global.text.subheading"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "t:global.text.heading",
      "default": "Blog posts"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "t:global.text.content"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "button_alignment",
      "label": "Button alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "info": "Defaults to blog URL if left empty"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View all"
    }
  ],
  "presets": [
    {
      "name": "News Posts",
      "settings": {
        "blog": "news"
      }
    }
  ]
}
{% endschema %}