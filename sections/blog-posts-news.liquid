{{ 'section-blog-posts.css' | asset_url | stylesheet_tag }}

<style>
  .news-posts-section {
    padding: 60px 0;
    background-color: {{ section.settings.background_color }};
  }

  .news-posts-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .news-posts-header {
    margin-bottom: 50px;
    text-align: {{ section.settings.heading_alignment }};
  }

  /* 他のセクションと統一されたタイトルスタイル */
  .news-posts-title {
    font-size: clamp(24px, 5vw, 36px);
    font-weight: var(--font-heading-weight, 600);
    letter-spacing: var(--letter-spacing-heading, 0.04em);
    line-height: var(--line-height-heading, 1.3);
    margin: 0 0 10px 0;
    color: {{ section.settings.heading_color }};
    text-transform: {{ section.settings.heading_text_transform }};
  }

  .news-posts-subtitle {
    font-size: 14px;
    color: {{ section.settings.subtitle_color }};
    letter-spacing: 0.02em;
    margin: 0;
  }

  .news-posts-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .news-post-item {
    border-bottom: 1px solid #e0e0e0;
    padding: 30px 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-decoration: none;
    color: inherit;
    transition: background-color 0.3s ease;
  }

  .news-post-item:first-child {
    padding-top: 0;
  }

  .news-post-item:last-child {
    border-bottom: none;
  }

  .news-post-item:hover {
    background-color: rgba(0, 0, 0, 0.02);
    margin: 0 -20px;
    padding-left: 20px;
    padding-right: 20px;
  }

  .news-post-content {
    flex: 1;
  }

  .news-post-date {
    font-size: 14px;
    color: {{ section.settings.date_color }};
    margin-bottom: 8px;
    font-weight: 400;
  }

  .news-post-title {
    font-size: 16px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin: 0;
    font-weight: 400;
    letter-spacing: 0.02em;
  }

  .news-post-arrow {
    width: 24px;
    height: 24px;
    margin-left: 20px;
    flex-shrink: 0;
  }

  .news-post-arrow svg {
    width: 100%;
    height: 100%;
    stroke: {{ section.settings.arrow_color }};
    stroke-width: 1.5;
  }

  /* View All Link */
  .news-view-all {
    text-align: center;
    margin-top: 50px;
  }

  .news-view-all-link {
    display: inline-block;
    padding: 12px 40px;
    border: 1px solid {{ section.settings.button_border_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    font-size: 14px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .news-view-all-link:hover {
    background-color: {{ section.settings.button_hover_bg }};
    color: {{ section.settings.button_hover_text }};
    border-color: {{ section.settings.button_hover_bg }};
  }

  /* Empty state */
  .news-empty-state {
    text-align: center;
    padding: 60px 20px;
    color: #999;
  }

  /* Mobile responsive */
  @media screen and (max-width: 768px) {
    .news-posts-section {
      padding: 40px 0;
    }

    .news-posts-container {
      padding: 0 16px;
    }

    .news-posts-title {
      font-size: clamp(20px, 6vw, 28px);
    }

    .news-posts-header {
      margin-bottom: 30px;
    }

    .news-post-item {
      padding: 20px 0;
      flex-direction: row;
      align-items: flex-start;
    }

    .news-post-item:hover {
      margin: 0 -16px;
      padding-left: 16px;
      padding-right: 16px;
    }

    .news-post-date {
      font-size: 13px;
      margin-bottom: 6px;
    }

    .news-post-title {
      font-size: 14px;
      line-height: 1.5;
    }

    .news-post-arrow {
      width: 20px;
      height: 20px;
      margin-left: 16px;
      margin-top: 20px;
    }

    .news-view-all {
      margin-top: 30px;
    }
  }

  /* Tablet responsive */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .news-posts-container {
      padding: 0 30px;
    }
  }
</style>

<section class="news-posts-section">
  <div class="news-posts-container">
    {%- if section.settings.title != blank or section.settings.subtitle != blank -%}
      <div class="news-posts-header">
        {%- if section.settings.title != blank -%}
          <h2 class="news-posts-title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="news-posts-subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="news-posts-list">
      {%- assign blog = blogs[section.settings.blog] -%}
      {%- if blog != blank -%}
        {%- assign articles_count = section.settings.post_limit -%}
        {%- for article in blog.articles limit: articles_count -%}
          <a href="{{ article.url }}" class="news-post-item">
            <div class="news-post-content">
              <div class="news-post-date">
                {{ article.published_at | date: section.settings.date_format }}
              </div>
              <h3 class="news-post-title">
                {{ article.title | strip_html | truncate: section.settings.title_truncate }}
              </h3>
            </div>
            <div class="news-post-arrow">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
              </svg>
            </div>
          </a>
        {%- endfor -%}
      {%- else -%}
        <div class="news-empty-state">
          <p>No blog selected. Please select a blog in the section settings.</p>
        </div>
      {%- endif -%}
    </div>

    {%- if section.settings.show_view_all and blog != blank -%}
      <div class="news-view-all">
        <a href="{{ blog.url }}" class="news-view-all-link">
          {{ section.settings.view_all_text }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

