<style>
  .look-section {
    padding: 2rem 0;
  }

  .look-section .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .look-section .section-header__title {
    font-size: 2rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0;
  }

  .look-section .section-description {
    text-align: center;
    margin-bottom: 3rem;
  }

  .look-section .section-description p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .look-section .top-image {
    margin-bottom: 3rem;
    text-align: center;
  }

  .look-section .top-image img {
    max-width: 100%;
    height: auto;
  }

  .look-list-2024fw.pc {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .look-list-2024fw.sp {
    display: none;
  }

  .look-item {
    position: relative;
  }

  .look-item a {
    display: block;
    text-decoration: none;
  }

  .look-item img {
    width: 100%;
    height: auto;
    transition: transform 0.3s ease;
  }

  .look-item:hover img {
    transform: scale(1.02);
  }

  .look-item .caption {
    margin-top: 1rem;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .scroll {
    position: relative;
    margin-bottom: 2rem;
  }

  .scroll-images {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    padding-bottom: 1rem;
  }

  .scroll-images::-webkit-scrollbar {
    height: 4px;
  }

  .scroll-images::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 2px;
  }

  .scroll-images::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 2px;
  }

  .scroll-images::-webkit-scrollbar-thumb:hover {
    background: #555;
  }

  .scroll-images img {
    flex-shrink: 0;
    width: 250px;
    height: auto;
  }

  .scroll-arrow {
    position: absolute;
    top: 50%;
    right: 1rem;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    padding: 0.5rem;
    transition: opacity 0.3s ease;
  }

  .scroll-arrow.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .scroll-arrow svg {
    width: 20px;
    height: 20px;
    display: block;
  }

  .scroll .caption {
    margin-top: 1rem;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .icon--placeholder {
    width: 100%;
    height: 300px;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ccc;
  }

  @media screen and (max-width: 768px) {
    .look-section {
      padding: 1rem 0;
    }

    .look-section .section-header__title {
      font-size: 1.5rem;
    }

    .look-list-2024fw.pc {
      display: none;
    }

    .look-list-2024fw.sp {
      display: block;
    }

    .scroll-images img {
      width: 200px;
    }
  }
</style>

<div class="page-width">
  {% unless section.settings.section_title == blank %}
  <div class="section-header section-header--small">
    <h2 class="section-header__title">
      {{ section.settings.section_title | escape }}
    </h2>
  </div>
  {% endunless %}

  {%- comment -%}
    シーズン概要
  {%- endcomment -%}
  {% unless section.settings.section_text_1 == blank %}
  <div class="">
    <p>{{ section.settings.section_text_1 | escape }}</p>
    <p>{{ section.settings.section_text_2 | escape }}</p>
  </div>
  {% endunless %}

  {% if section.settings.top_image != blank %}
  <div class="top-image">
    <img src="{{ section.settings.top_image | img_url: 'master' }}" 
         alt="{{ section.settings.top_image_alt | escape }}"
         width="{{ section.settings.top_image.width }}"
         height="{{ section.settings.top_image.height }}">
  </div>
  {% endif %}

  <div class="look-list-2024fw pc">
    {% for block in section.blocks limit: section.blocks.size %}
      {% if block.type == 'image' %}
        {% if block.settings.image != blank %}
        <div class="look-item" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link | escape }}" data-size="1200x1500">
            <img class="gallery__image"
                 src="{{ block.settings.image | img_url: 'master' }}"
                 width="{{ block.settings.image.width }}"
                 height="{{ block.settings.image.height }}"
                 alt="{{ block.settings.image.alt | escape }}"
                 loading="lazy">
          </a>
          <div class="caption">
            {{ block.settings.custom_html }}
          </div>
        </div>
        {% else %}
        <div class="look-item" {{ block.shopify_attributes }}>
          {{ 'image' | placeholder_svg_tag: 'icon icon--placeholder' }}
        </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>

  <div class="look-list-2024fw sp">
    {% for block in section.blocks limit: section.blocks.size %}
      {% if block.type == 'scroll' %}
        <div class="scroll" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link | escape }}" class="scroll-link">
            <div class="scroll-images">
              {% if block.settings.image_1 != blank %}
              <img class="gallery__image"
                src="{{ block.settings.image_1 | img_url: 'master' }}"
                width="{{ block.settings.image_1.width }}"
                height="{{ block.settings.image_1.height }}"
                alt="{{ block.settings.image_1.alt | escape }}"
                loading="lazy">
              {% endif %}
              {% if block.settings.image_2 != blank %}
              <img class="gallery__image"
                src="{{ block.settings.image_2 | img_url: 'master' }}"
                width="{{ block.settings.image_2.width }}"
                height="{{ block.settings.image_2.height }}"
                alt="{{ block.settings.image_2.alt | escape }}"
                loading="lazy">
              {% endif %}
              {% if block.settings.image_3 != blank %}
              <img class="gallery__image"
                src="{{ block.settings.image_3 | img_url: 'master' }}"
                width="{{ block.settings.image_3.width }}"
                height="{{ block.settings.image_3.height }}"
                alt="{{ block.settings.image_3.alt | escape }}"
                loading="lazy">
              {% endif %}
              {% if block.settings.image_4 != blank %}
              <img class="gallery__image"
                src="{{ block.settings.image_4 | img_url: 'master' }}"
                width="{{ block.settings.image_4.width }}"
                height="{{ block.settings.image_4.height }}"
                alt="{{ block.settings.image_4.alt | escape }}"
                loading="lazy">
              {% endif %}
            </div>
            
            <div class="scroll-arrow">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9,18 15,12 9,6"></polyline>
              </svg>
            </div>
            
          </a>
          <div class="caption">
            {{ block.settings.custom_html }}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const scrollContainers = document.querySelectorAll('.scroll');
    
      scrollContainers.forEach(container => {
        const images = container.querySelectorAll('.scroll-images img');
        const arrow = container.querySelector('.scroll-arrow');
        const scrollImages = container.querySelector('.scroll-images');
        
        if (!scrollImages || !arrow) return;
    
        // 初期チェック:矢印が必要かどうかを確認
        if (scrollImages.scrollWidth <= scrollImages.clientWidth) {
          arrow.classList.add('hidden');
        }
    
        // スクロール位置を確認して矢印を表示/非表示にする関数
        const checkScroll = () => {
          if (scrollImages.scrollLeft + scrollImages.clientWidth >= scrollImages.scrollWidth) {
            arrow.classList.add('hidden');
          } else {
            arrow.classList.remove('hidden');
          }
        };
    
        // ページロード時にスクロール位置をチェック
        checkScroll();
    
        // スクロールイベントをリッスンしてスクロール位置をチェック
        scrollImages.addEventListener('scroll', checkScroll);
    
        // ウィンドウリサイズ時にもスクロール位置をチェック
        window.addEventListener('resize', checkScroll);
      });
    });    
  </script>
</div>

