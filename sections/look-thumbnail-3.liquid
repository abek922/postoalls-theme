        },
        {
          "type": "product",
          "id": "featured_product_3",
          "label": "Product 3"
        },
        {
          "type": "product",
          "id": "featured_product_4",
          "label": "Product 4"
        },
        {
          "type": "product",
          "id": "featured_product_5",
          "label": "Product 5"
