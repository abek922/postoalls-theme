<style>
#shopify-section-page-look-2024-fw {
  padding-top: 1rem;
}
.top-image {
  padding: 10px 0;
}
.look-list-2024fw {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin: 5rem 0 2rem;
}
.look-list-2024fw .look-item {
  width: calc((100% / 4) - 0px);
  margin: 0px;
  text-align: center;
}
.look-list-2024fw .look-item a {
  cursor: pointer;
}
.look-list-2024fw .look-item a img {
  width: 100%;
  margin: 0%;
  transition: opacity 0.2s ease;
}
.look-list-2024fw .look-item a:hover img {
  opacity: 0.8;
}
.caption {
  margin-top: 1rem;
  text-align: left;
  font-size: 10px;
}
.scroll {
  padding: 0 0 10px;
  position: relative;
}
.scroll-images {
  display: flex;
  overflow-x: auto;
  gap: 10px;
  margin: 0 calc(50% - 50vw);
}
.scroll-images.collection {
  margin: 0;
}
.scroll-images img {
  flex: 0 0 auto;
  width: 30%;
}
.scroll-arrow {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.8);
  padding: 5px;
  margin: 0 calc(50% - 50vw);
  transition: opacity 0.5s ease, visibility 0.5s ease;
}
.scroll-arrow svg {
  width: 50px;
  height: 50px;
  display: block;
}
.scroll-arrow.hidden {
  opacity: 0;
  visibility: hidden;
}

.icon--placeholder {
  width: 100%;
  height: 300px;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ccc;
}

/* モーダルスタイル */
.image-modal {
  display: none;
  position: fixed;
  z-index: 9999;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
  animation: fadeIn 0.3s ease;
}

.image-modal.active {
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-modal__content {
  position: relative;
  max-width: 90%;
  max-height: 90vh;
  margin: auto;
}

.image-modal__image {
  width: 100%;
  height: auto;
  max-height: 90vh;
  object-fit: contain;
}

.image-modal__close {
  position: absolute;
  top: 20px;
  right: 20px;
  color: white;
  font-size: 40px;
  font-weight: 300;
  cursor: pointer;
  background: rgba(0, 0, 0, 0.5);
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: background 0.2s ease;
  z-index: 10000;
}

.image-modal__close:hover {
  background: rgba(0, 0, 0, 0.8);
}

.image-modal__nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.8);
  border: none;
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: background 0.2s ease;
  z-index: 10000;
}

.image-modal__nav:hover {
  background: rgba(255, 255, 255, 0.95);
}

.image-modal__nav--prev {
  left: 20px;
}

.image-modal__nav--next {
  right: 20px;
}

.image-modal__nav svg {
  width: 24px;
  height: 24px;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@media screen and (min-width: 769px) {
  .look-list-2024fw.sp {
    display: none;
  }
  .scroll-images {
    justify-content: center;
  }
}

@media screen and (max-width: 768px) {
  .look-list-2024fw.pc {
    display: none;
  }
  .top-image {
    width: 100vw;
    margin: 0 calc(50% - 50vw);
    padding: 10px 0 20px;
  }
  .look-list-2024fw .look-item {
    width: calc((100% / 2) - 20px);
    margin: 10px;
    text-align: center;
  }
  .scroll-images img {
    flex: 0 0 auto;
    width: 100%;
  }
  .scroll-images.collection img {
    width: 85%;
  }
  
  .image-modal__close {
    top: 10px;
    right: 10px;
    width: 40px;
    height: 40px;
    font-size: 30px;
  }
  
  .image-modal__nav {
    width: 40px;
    height: 40px;
  }
  
  .image-modal__nav--prev {
    left: 10px;
  }
  
  .image-modal__nav--next {
    right: 10px;
  }
}
</style>

<div class="page-width">
  {% unless section.settings.section_title == blank %}
  <div class="section-header section-header--small">
    <h2 class="section-header__title">
      {{ section.settings.section_title | escape }}
    </h2>
  </div>
  {% endunless %}

  {%- comment -%}
    シーズン概要
  {%- endcomment -%}
  {% unless section.settings.section_text_1 == blank %}
  <div class="">
    <p>{{ section.settings.section_text_1 | escape }}</p>
    <p>{{ section.settings.section_text_2 | escape }}</p>
  </div>
  {% endunless %}

  {% if section.settings.top_image != blank %}
  <div class="top-image">
    <img src="{{ section.settings.top_image | img_url: 'master' }}" 
         alt="{{ section.settings.top_image_alt | escape }}"
         width="{{ section.settings.top_image.width }}"
         height="{{ section.settings.top_image.height }}"
         loading="lazy">
  </div>
  {% endif %}

  <div class="look-list-2024fw pc">
    {% for block in section.blocks limit: section.blocks.size %}
      {% if block.type == 'image' %}
        {% if block.settings.image != blank %}
        <div class="look-item" {{ block.shopify_attributes }}>
          <a href="#" class="look-image-trigger" data-index="{{ forloop.index0 }}">
            <img class="gallery__image"
                 src="{{ block.settings.image | img_url: 'master' }}"
                 data-large="{{ block.settings.image | img_url: '2048x' }}"
                 width="{{ block.settings.image.width }}"
                 height="{{ block.settings.image.height }}"
                 alt="{{ block.settings.image.alt | escape }}"
                 loading="lazy">
          </a>
          <div class="caption">
            {{ block.settings.custom_html }}
          </div>
        </div>
        {% else %}
        <div class="look-item" {{ block.shopify_attributes }}>
          {{ 'image' | placeholder_svg_tag: 'icon icon--placeholder' }}
        </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>

  <div class="look-list-2024fw sp">
    {% for block in section.blocks limit: section.blocks.size %}
      {% if block.type == 'scroll' %}
        <div class="scroll" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link | escape }}" class="scroll-link">
            <div class="scroll-images">
              {% if block.settings.image_1 != blank %}
              <img class="gallery__image"
                src="{{ block.settings.image_1 | img_url: 'master' }}"
                width="{{ block.settings.image_1.width }}"
                height="{{ block.settings.image_1.height }}"
                alt="{{ block.settings.image_1.alt | escape }}"
                loading="lazy">
              {% endif %}
              {% if block.settings.image_2 != blank %}
              <img class="gallery__image"
                src="{{ block.settings.image_2 | img_url: 'master' }}"
                width="{{ block.settings.image_2.width }}"
                height="{{ block.settings.image_2.height }}"
                alt="{{ block.settings.image_2.alt | escape }}"
                loading="lazy">
              {% endif %}
              {% if block.settings.image_3 != blank %}
              <img class="gallery__image"
                src="{{ block.settings.image_3 | img_url: 'master' }}"
                width="{{ block.settings.image_3.width }}"
                height="{{ block.settings.image_3.height }}"
                alt="{{ block.settings.image_3.alt | escape }}"
                loading="lazy">
              {% endif %}
              {% if block.settings.image_4 != blank %}
              <img class="gallery__image"
                src="{{ block.settings.image_4 | img_url: 'master' }}"
                width="{{ block.settings.image_4.width }}"
                height="{{ block.settings.image_4.height }}"
                alt="{{ block.settings.image_4.alt | escape }}"
                loading="lazy">
              {% endif %}
            </div>
            
            <div class="scroll-arrow">
              <svg width="50" height="50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9,18 15,12 9,6"></polyline>
              </svg>
            </div>
            
          </a>
          <div class="caption">
            {{ block.settings.custom_html }}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<!-- モーダル -->
<div id="imageModal" class="image-modal">
  <button class="image-modal__close" aria-label="閉じる">&times;</button>
  <button class="image-modal__nav image-modal__nav--prev" aria-label="前の画像">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="15,18 9,12 15,6"></polyline>
    </svg>
  </button>
  <button class="image-modal__nav image-modal__nav--next" aria-label="次の画像">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="9,18 15,12 9,6"></polyline>
    </svg>
  </button>
  <div class="image-modal__content">
    <img id="modalImage" class="image-modal__image" src="" alt="">
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // スクロール矢印の制御
  const scrollContainers = document.querySelectorAll('.scroll');

  scrollContainers.forEach(container => {
    const arrow = container.querySelector('.scroll-arrow');
    const scrollImages = container.querySelector('.scroll-images');
    
    if (!scrollImages || !arrow) return;

    if (scrollImages.scrollWidth <= scrollImages.clientWidth) {
      arrow.classList.add('hidden');
    }

    const checkScroll = () => {
      if (scrollImages.scrollLeft + scrollImages.clientWidth >= scrollImages.scrollWidth) {
        arrow.classList.add('hidden');
      } else {
        arrow.classList.remove('hidden');
      }
    };

    checkScroll();
    scrollImages.addEventListener('scroll', checkScroll);
    window.addEventListener('resize', checkScroll);
  });

  // モーダル機能
  const modal = document.getElementById('imageModal');
  const modalImage = document.getElementById('modalImage');
  const closeBtn = modal.querySelector('.image-modal__close');
  const prevBtn = modal.querySelector('.image-modal__nav--prev');
  const nextBtn = modal.querySelector('.image-modal__nav--next');
  const imageTriggers = document.querySelectorAll('.look-image-trigger');
  
  let currentIndex = 0;
  let images = [];

  // 画像データを収集
  imageTriggers.forEach((trigger, index) => {
    const img = trigger.querySelector('img');
    if (img) {
      images.push({
        src: img.getAttribute('data-large') || img.src,
        alt: img.alt
      });
    }
  });

  // 画像を表示
  function showImage(index) {
    if (index < 0) index = images.length - 1;
    if (index >= images.length) index = 0;
    
    currentIndex = index;
    modalImage.src = images[index].src;
    modalImage.alt = images[index].alt;
  }

  // モーダルを開く
  imageTriggers.forEach((trigger, index) => {
    trigger.addEventListener('click', function(e) {
      e.preventDefault();
      currentIndex = index;
      showImage(currentIndex);
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
    });
  });

  // モーダルを閉じる
  function closeModal() {
    modal.classList.remove('active');
    document.body.style.overflow = '';
  }

  closeBtn.addEventListener('click', closeModal);
  
  modal.addEventListener('click', function(e) {
    if (e.target === modal) {
      closeModal();
    }
  });

  // 前の画像
  prevBtn.addEventListener('click', function(e) {
    e.stopPropagation();
    showImage(currentIndex - 1);
  });

  // 次の画像
  nextBtn.addEventListener('click', function(e) {
    e.stopPropagation();
    showImage(currentIndex + 1);
  });

  // キーボード操作
  document.addEventListener('keydown', function(e) {
    if (!modal.classList.contains('active')) return;
    
    if (e.key === 'Escape') {
      closeModal();
    } else if (e.key === 'ArrowLeft') {
      showImage(currentIndex - 1);
    } else if (e.key === 'ArrowRight') {
      showImage(currentIndex + 1);
    }
  });
});
</script>

