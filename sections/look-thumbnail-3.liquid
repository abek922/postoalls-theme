<style>
  .style-page-section {
    padding: 2rem 0;
  }

  .style-page-section .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .style-page-section .section-header__title {
    font-size: 2rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0;
  }

  .style-look-block {
    margin-bottom: 4rem;
  }

  .style-look-block:last-child {
    margin-bottom: 0;
  }

  .style-look-block.has-divider {
    padding-top: 2rem;
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
  }

  .style-look-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .style-look-title {
    font-size: 1.5rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin: 0;
    color: rgb(var(--color-foreground));
  }

  .style-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: start;
  }

  .style-image-container {
    position: relative;
    background: #f8f8f8;
    overflow: hidden;
  }

  .style-image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .style-image-container:hover .style-image {
    transform: scale(1.02);
  }

  .style-products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1.5rem;
  }

  .style-product-card {
    background: white;
    border: 1px solid rgba(var(--color-foreground), 0.08);
    border-radius: 0;
    overflow: hidden;
    transition: all 0.25s ease;
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .style-product-card:hover {
    border-color: rgba(var(--color-foreground), 0.2);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
    text-decoration: none;
    color: inherit;
  }

  .style-product-image {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    background: #f8f8f8;
  }

  .style-product-image.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(var(--color-foreground), 0.3);
  }

  .style-product-info {
    padding: 1rem;
  }

  .style-product-title {
    font-size: 0.8rem;
    font-weight: 400;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
    color: rgb(var(--color-foreground));
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .style-product-price {
    font-size: 0.8rem;
    color: rgba(var(--color-foreground), 0.7);
    margin: 0;
  }

  .style-product-price .price {
    font-weight: 500;
  }

  .style-product-price .price--compare {
    text-decoration: line-through;
    margin-right: 0.5rem;
    opacity: 0.6;
  }

  .style-placeholder {
    width: 100%;
    height: 400px;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ccc;
  }

  /* タブレット以上 */
  @media screen and (min-width: 768px) {
    .style-content {
      grid-template-columns: 2fr 1fr;
      gap: 4rem;
    }

    .style-products-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  /* デスクトップ以上 */
  @media screen and (min-width: 1024px) {
    .style-products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* モバイル対応 */
  @media screen and (max-width: 767px) {
    .style-page-section {
      padding: 1rem 0;
    }

    .style-page-section .section-header__title {
      font-size: 1.5rem;
    }

    .style-look-block {
      margin-bottom: 3rem;
    }

    .style-content {
      gap: 2rem;
    }

    .style-products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .style-look-title {
      font-size: 1.25rem;
    }
  }
</style>

<div class="style-page-section color-scheme color-scheme--{{ section.settings.color_scheme.id }} {% if section.settings.separate_section_with_border %}bordered-section{% endif %}">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="section-header">
        <h1 class="section-header__title">{{ section.settings.title | escape }}</h1>
      </div>
    {%- endif -%}

    {%- for block in section.blocks -%}
      <div class="style-look-block {% if block.settings.divider %}has-divider{% endif %}" {{ block.shopify_attributes }}>
        {%- if block.settings.image_1 != blank -%}
          {%- if block.settings.look_title != blank -%}
            <header class="style-look-header">
              <h2 class="style-look-title">{{ block.settings.look_title | escape }}</h2>
            </header>
          {%- endif -%}

          <div class="style-content">
            <div class="style-image-container">
              {{ block.settings.image_1 | image_url: width: 1200 | image_tag: class: 'style-image', alt: block.settings.image_1.alt, loading: 'lazy' }}
            </div>

            <div class="style-products-container">
              <div class="style-products-grid">
                {%- for i in (1..6) -%}
                  {%- assign product_key = 'featured_product_' | append: i -%}
                  {%- assign product = block.settings[product_key] -%}
                  
                  {%- if product and product != empty -%}
                    <a href="{{ product.url }}" class="style-product-card">
                      {%- if product.featured_image -%}
                        {{ product.featured_image | image_url: width: 400 | image_tag: class: 'style-product-image', alt: product.title, loading: 'lazy' }}
                      {%- else -%}
                        <div class="style-product-image placeholder">
                          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/>
                            <circle cx="8.5" cy="8.5" r="1.5" stroke="currentColor" stroke-width="2"/>
                            <path d="M21 15L16 10L5 21" stroke="currentColor" stroke-width="2"/>
                          </svg>
                        </div>
                      {%- endif -%}
                      
                      <div class="style-product-info">
                        <h3 class="style-product-title">{{ product.title }}</h3>
                        <div class="style-product-price">
                          {%- if product.compare_at_price > product.price -%}
                            <span class="price price--compare">{{ product.compare_at_price | money }}</span>
                          {%- endif -%}
                          <span class="price">{{ product.price | money }}</span>
                        </div>
                      </div>
                    </a>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            </div>
          </div>
        {%- else -%}
          <div class="style-placeholder">
            <svg width="60" height="60" viewBox="0 0 60 60" fill="none">
              <rect x="12" y="18" width="36" height="24" rx="2" stroke="currentColor" stroke-width="1.5" fill="none"/>
              <circle cx="22" cy="26" r="3" stroke="currentColor" stroke-width="1.5" fill="none"/>
              <path d="m45 35-5-5-8 8-4-4-3 3" stroke="currentColor" stroke-width="1.5" fill="none"/>
            </svg>
          </div>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
