<script>
(function() {
  // 商品情報を動的に読み込む関数
  function loadProductData() {
    const errorCards = document.querySelectorAll('.look-page__product-card[data-product-handle]');
    
    errorCards.forEach(card => {
      const handle = card.getAttribute('data-product-handle');
      if (!handle) return;
      
      // Shopify Ajax APIで商品情報を取得
      fetch(`/products/${handle}.js`)
        .then(response => {
          if (!response.ok) throw new Error('Product not found');
          return response.json();
        })
        .then(product => {
          // 商品情報が取得できたらカードを更新
          updateProductCard(card, product);
        })
        .catch(error => {
          console.error(`Failed to load product ${handle}:`, error);
          // エラーの場合はそのまま（エラーメッセージを表示）
        });
    });
  }
  
  function updateProductCard(card, product) {
    // 画像エリアを更新
    const imageArea = card.querySelector('.look-page__product-image');
    if (imageArea && product.featured_image) {
      // 画像URLをリサイズ（400px幅）
      let imageUrl = product.featured_image;
      // Shopifyの画像URLにサイズパラメータを追加
      if (imageUrl.includes('cdn.shopify.com') && !imageUrl.includes('_400x')) {
        const urlParts = imageUrl.split('.');
        const extension = urlParts.pop();
        imageUrl = urlParts.join('.') + '_400x.' + extension;
      }
      
      imageArea.style.background = '#f8f8f8';
      imageArea.style.border = 'none';
      imageArea.innerHTML = `<img src="${imageUrl}" alt="${product.title}" loading="lazy" style="width: 100%; height: 100%; object-fit: cover; display: block;">`;
    }
    
    // タイトルを更新
    const titleElement = card.querySelector('.look-page__product-title');
    if (titleElement) {
      titleElement.textContent = product.title;
      titleElement.style.color = 'rgb(var(--text-color))';
      titleElement.style.fontSize = '0.8rem';
    }
    
    // 価格を更新
    const priceElement = card.querySelector('.look-page__product-price');
    if (priceElement && product.price) {
      // Shopify APIは価格をセント単位で返すため100で割る
      const price = Math.round(product.price / 100);
      const comparePrice = product.compare_at_price ? Math.round(product.compare_at_price / 100) : null;
      
      let priceHtml = '';
      if (comparePrice && comparePrice > price) {
        priceHtml = `<span class="price price--compare">¥${comparePrice.toLocaleString()}</span>`;
      }
      priceHtml += `<span class="price">¥${price.toLocaleString()}</span>`;
      
      priceElement.innerHTML = priceHtml;
      priceElement.style.fontSize = '0.8rem';
      priceElement.style.color = 'rgba(var(--text-color), 0.7)';
      priceElement.style.lineHeight = 'normal';
    }
    
    // ボーダーを通常に戻す
    card.style.border = '1px solid rgba(var(--text-color), 0.08)';
    card.style.cursor = 'pointer';
  }

  function initLookPage() {
    const lookPageContent = document.querySelector('.look-page__content');
    if (!lookPageContent) return;

    let currentLookIndex = 0;
    const looks = Array.from(document.querySelectorAll('.look-page__look'));
    const lookThumbnails = Array.from(document.querySelectorAll('.look-page__navigation .look-page__thumbnail'));
    const screenPrevButton = document.querySelector('.look-page__screen-nav-button--prev');
    const screenNextButton = document.querySelector('.look-page__screen-nav-button--next');
    
    if (looks.length === 0) return;
    
    // 商品情報を動的に読み込む
    loadProductData();

    // 各Lookの画像切り替え機能を初期化
    looks.forEach((look, lookIndex) => {
      const imageWrappers = Array.from(look.querySelectorAll('.look-page__image-wrapper'));
      const imageThumbnails = Array.from(look.querySelectorAll('.look-page__image-thumbnail'));
      const imagePrevButton = look.querySelector('.look-page__nav-button--prev');
      const imageNextButton = look.querySelector('.look-page__nav-button--next');
      const imageContainer = look.querySelector('.look-page__image-container');
      
      if (imageWrappers.length === 0) return;

      let currentImageIndex = 0;

      // スワイプ検出用の変数
      let touchStartX = 0;
      let touchEndX = 0;
      let touchStartY = 0;
      let touchEndY = 0;
      const minSwipeDistance = 50;

      function showImage(index) {
        if (index < 0 || index >= imageWrappers.length) return;
        
        currentImageIndex = index;

        imageWrappers.forEach((wrapper, i) => {
          if (i === index) {
            wrapper.classList.add('is-active');
          } else {
            wrapper.classList.remove('is-active');
          }
        });

        imageThumbnails.forEach((thumbnail, i) => {
          if (i === index) {
            thumbnail.classList.add('is-active');
          } else {
            thumbnail.classList.remove('is-active');
          }
        });

        if (imageThumbnails[index]) {
          imageThumbnails[index].scrollIntoView({
            behavior: 'smooth',
            block: 'nearest',
            inline: 'center'
          });
        }
      }

      function showPreviousImage() {
        const newIndex = currentImageIndex > 0 ? currentImageIndex - 1 : imageWrappers.length - 1;
        showImage(newIndex);
      }

      function showNextImage() {
        const newIndex = currentImageIndex < imageWrappers.length - 1 ? currentImageIndex + 1 : 0;
        showImage(newIndex);
      }

      function handleImageSwipe() {
        const diffX = touchEndX - touchStartX;
        const diffY = touchEndY - touchStartY;
        
        if (Math.abs(diffX) > Math.abs(diffY) && Math.abs(diffX) > minSwipeDistance) {
          if (diffX > 0) {
            showPreviousImage();
          } else {
            showNextImage();
          }
        }
      }

      // 画像サムネイルクリック
      imageThumbnails.forEach((thumbnail) => {
        thumbnail.addEventListener('click', function(e) {
          e.preventDefault();
          const index = parseInt(this.getAttribute('data-image-index'), 10);
          if (!isNaN(index)) {
            showImage(index);
          }
        });
      });

      // 画像左右のナビゲーションボタン
      if (imagePrevButton) {
        imagePrevButton.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          showPreviousImage();
        });
      }

      if (imageNextButton) {
        imageNextButton.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          showNextImage();
        });
      }

      // タッチイベント（画像エリア）
      if (imageContainer) {
        imageContainer.addEventListener('touchstart', function(e) {
          touchStartX = e.changedTouches[0].screenX;
          touchStartY = e.changedTouches[0].screenY;
        }, { passive: true });

        imageContainer.addEventListener('touchend', function(e) {
          touchEndX = e.changedTouches[0].screenX;
          touchEndY = e.changedTouches[0].screenY;
          handleImageSwipe();
        }, { passive: true });
      }

      showImage(0);
    });

    // Look切り替え機能
    function showLook(index) {
      if (index < 0 || index >= looks.length) return;
      
      currentLookIndex = index;

      looks.forEach((look, i) => {
        if (i === index) {
          look.classList.add('is-active');
        } else {
          look.classList.remove('is-active');
        }
      });

      lookThumbnails.forEach((thumbnail, i) => {
        if (i === index) {
          thumbnail.classList.add('is-active');
        } else {
          thumbnail.classList.remove('is-active');
        }
      });

      if (lookThumbnails[index]) {
        lookThumbnails[index].scrollIntoView({
          behavior: 'smooth',
          block: 'nearest',
          inline: 'center'
        });
      }

      // 切り替えたLookの1枚目の画像を表示
      const newLook = looks[index];
      if (newLook) {
        const imageWrappers = Array.from(newLook.querySelectorAll('.look-page__image-wrapper'));
        const imageThumbnails = Array.from(newLook.querySelectorAll('.look-page__image-thumbnail'));
        
        imageWrappers.forEach((wrapper, i) => {
          wrapper.classList.toggle('is-active', i === 0);
        });
        
        imageThumbnails.forEach((thumbnail, i) => {
          thumbnail.classList.toggle('is-active', i === 0);
        });
      }
    }

    function showPreviousLook() {
      const newIndex = currentLookIndex > 0 ? currentLookIndex - 1 : looks.length - 1;
      showLook(newIndex);
    }

    function showNextLook() {
      const newIndex = currentLookIndex < looks.length - 1 ? currentLookIndex + 1 : 0;
      showLook(newIndex);
    }

    // Lookサムネイルクリック
    lookThumbnails.forEach((thumbnail) => {
      thumbnail.addEventListener('click', function(e) {
        e.preventDefault();
        const index = parseInt(this.getAttribute('data-look-index'), 10);
        if (!isNaN(index)) {
          showLook(index);
        }
      });
    });

    // 画面左右のナビゲーションボタン
    if (screenPrevButton) {
      screenPrevButton.addEventListener('click', function(e) {
        e.preventDefault();
        showPreviousLook();
      });
    }

    if (screenNextButton) {
      screenNextButton.addEventListener('click', function(e) {
        e.preventDefault();
        showNextLook();
      });
    }

    // キーボードナビゲーション
    document.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowLeft') {
        e.preventDefault();
        showPreviousLook();
      } else if (e.key === 'ArrowRight') {
        e.preventDefault();
        showNextLook();
      }
    });

    showLook(0);
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initLookPage);
  } else {
    initLookPage();
  }

  if (typeof Shopify !== 'undefined' && Shopify.designMode) {
    document.addEventListener('shopify:section:load', initLookPage);
  }
})();
