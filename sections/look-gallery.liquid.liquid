{% comment %}
===============================================================================
LOOK Gallery Section
===============================================================================
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    --look-gallery-background: {{ section.settings.background.rgb }};
    --look-gallery-text-color: {{ section.settings.text_color.rgb }};
  }
</style>

<div class="section-spacing{% if section.settings.separate_section_with_border %} bordered-section{% endif %} color-scheme color-scheme--{{ section.settings.color_scheme.id }}">
  <div class="container">
    {%- if section.settings.title != blank or section.settings.content != blank -%}
      <div class="section-header">
        {%- if section.settings.title != blank -%}
          <h1 class="h2">{{ section.settings.title | escape }}</h1>
        {%- endif -%}
        
        {%- if section.settings.content != blank -%}
          <div class="prose">
            {{ section.settings.content }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <look-gallery class="look-gallery">
        {%- comment -%}サムネイル一覧{%- endcomment -%}
        <div class="look-gallery__thumbnails scroll-area snap-x">
          <div class="look-gallery__thumbnails-list">
            {%- for block in section.blocks -%}
              {%- if block.settings.image != blank -%}
                <button type="button" 
                        class="look-gallery__thumbnail{% if forloop.first %} is-active{% endif %}"
                        data-look-index="{{ forloop.index0 }}"
                        {{ block.shopify_attributes }}>
                  {{- block.settings.image | image_url: width: 200 | image_tag: 
                      loading: 'lazy',
                      sizes: '100px',
                      widths: '100,200,300' -}}
                </button>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>

        {%- comment -%}メインギャラリー{%- endcomment -%}
        <div class="look-gallery__main">
          {%- comment -%}前へボタン{%- endcomment -%}
          <button type="button" class="look-gallery__nav look-gallery__nav--prev" data-action="prev">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>

          {%- comment -%}次へボタン{%- endcomment -%}
          <button type="button" class="look-gallery__nav look-gallery__nav--next" data-action="next">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 6L15 12L9 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>

          {%- comment -%}LOOK画像とプロダクト一覧{%- endcomment -%}
          <div class="look-gallery__slides">
            {%- for block in section.blocks -%}
              {%- if block.settings.image != blank -%}
                <div class="look-gallery__slide{% if forloop.first %} is-active{% endif %}"
                     data-look-index="{{ forloop.index0 }}"
                     {{ block.shopify_attributes }}>
                  
                  {%- comment -%}LOOK画像{%- endcomment -%}
                  <div class="look-gallery__image">
                    {{- block.settings.image | image_url: width: 1200 | image_tag: 
                        loading: 'lazy',
                        sizes: '(min-width: 1000px) 50vw, 100vw',
                        widths: '300,400,500,600,700,800,900,1000,1200,1400' -}}
                  </div>

                  {%- comment -%}プロダクト一覧{%- endcomment -%}
                  <div class="look-gallery__products">
                    {%- assign products_array = '' -%}
                    {%- for i in (1..6) -%}
                      {%- assign product_key = 'product_' | append: i -%}
                      {%- if block.settings[product_key] != blank -%}
                        {%- assign products_array = products_array | append: block.settings[product_key].id -%}
                        {%- unless forloop.last -%}
                          {%- assign products_array = products_array | append: ',' -%}
                        {%- endunless -%}
                      {%- endif -%}
                    {%- endfor -%}

                    {%- if products_array != blank -%}
                      <div class="look-gallery__products-grid">
                        {%- assign product_ids = products_array | split: ',' -%}
                        {%- for product_id in product_ids -%}
                          {%- assign product = all_products[collections.all.products[product_id].handle] -%}
                          {%- if product != blank -%}
                            <div class="look-gallery__product-card">
                              <a href="{{ product.url }}" class="look-gallery__product-link">
                                {%- if product.featured_image -%}
                                  {{- product.featured_image | image_url: width: 300 | image_tag: 
                                      loading: 'lazy',
                                      sizes: '150px',
                                      widths: '150,300,450' -}}
                                {%- endif -%}
                                <div class="look-gallery__product-info">
                                  <h3 class="look-gallery__product-title">{{ product.title }}</h3>
                                  <div class="look-gallery__product-price">
                                    {%- render 'price-list', product: product -%}
                                  </div>
                                </div>
                              </a>
                            </div>
                          {%- endif -%}
                        {%- endfor -%}
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      </look-gallery>
    {%- else -%}
      <div class="empty-state">
        <p>{{ 'sections.look_gallery.empty_state' | t }}</p>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  /* Look Gallery Styles */
  .look-gallery {
    --look-thumbnail-size: 80px;
    --look-nav-size: 48px;
    display: grid;
    gap: 2rem;
  }

  @media screen and (min-width: 1000px) {
    .look-gallery {
      --look-thumbnail-size: 100px;
      --look-nav-size: 56px;
      gap: 3rem;
    }
  }

  /* Thumbnails */
  .look-gallery__thumbnails {
    padding-bottom: 1rem;
  }

  .look-gallery__thumbnails-list {
    display: flex;
    gap: 1rem;
    padding: 0 1rem;
  }

  .look-gallery__thumbnail {
    flex-shrink: 0;
    width: var(--look-thumbnail-size);
    height: var(--look-thumbnail-size);
    border: 2px solid transparent;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
    background: none;
    padding: 0;
  }

  .look-gallery__thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .look-gallery__thumbnail.is-active {
    border-color: rgb(var(--text-color));
    transform: scale(1.05);
  }

  .look-gallery__thumbnail:hover {
    transform: scale(1.05);
    opacity: 0.8;
  }

  /* Main Gallery */
  .look-gallery__main {
    position: relative;
    min-height: 600px;
  }

  /* Navigation Buttons */
  .look-gallery__nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: var(--look-nav-size);
    height: var(--look-nav-size);
    background: rgba(var(--background), 0.9);
    border: 1px solid rgba(var(--border-color), 0.3);
    border-radius: 50%;
    color: rgb(var(--text-color));
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .look-gallery__nav--prev {
    left: 1rem;
  }

  .look-gallery__nav--next {
    right: 1rem;
  }

  .look-gallery__nav:hover {
    background: rgba(var(--background), 1);
    transform: translateY(-50%) scale(1.1);
  }

  .look-gallery__nav:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  /* Slides */
  .look-gallery__slides {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .look-gallery__slide {
    display: none;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: start;
  }

  .look-gallery__slide.is-active {
    display: grid;
  }

  @media screen and (min-width: 1000px) {
    .look-gallery__slide {
      grid-template-columns: 1fr 400px;
      gap: 3rem;
    }
  }

  /* Look Image */
  .look-gallery__image {
    width: 100%;
    border-radius: 12px;
    overflow: hidden;
  }

  .look-gallery__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Products */
  .look-gallery__products {
    width: 100%;
  }

  .look-gallery__products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.5rem;
  }

  @media screen and (min-width: 1000px) {
    .look-gallery__products-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  /* Product Card */
  .look-gallery__product-card {
    background: rgb(var(--background));
    border: 1px solid rgba(var(--border-color), 0.1);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .look-gallery__product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(var(--text-color), 0.1);
  }

  .look-gallery__product-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .look-gallery__product-link img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  @media screen and (min-width: 1000px) {
    .look-gallery__product-link img {
      height: 200px;
    }
  }

  .look-gallery__product-card:hover img {
    transform: scale(1.05);
  }

  .look-gallery__product-info {
    padding: 1rem;
  }

  .look-gallery__product-title {
    font-size: 0.9rem;
    font-weight: 500;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .look-gallery__product-price {
    font-size: 0.85rem;
    color: rgba(var(--text-color), 0.8);
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: rgba(var(--text-color), 0.6);
  }
</style>

